<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/baclground"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/logo_large"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <com.example.quang.timnhatro.object.TextBold
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:text="tìm nhà trọ"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:paddingTop="0dp"
                    android:paddingBottom="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="20dp"
                    style="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorBackground"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cardUser"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    android:hint="Tiêu đề"
                    android:textSize="18sp"
                    android:padding="12dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    android:hint="Địa chỉ"
                    android:textSize="18sp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    android:hint="Thông tin"
                    android:textSize="18sp"
                    android:paddingRight="12dp"
                    android:paddingTop="55dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="55dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    android:hint="Điện thoại liên hệ"
                    android:textSize="18sp"
                    android:paddingTop="12dp"
                    android:inputType="number"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="12dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edtAcreage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    android:hint="Diện tích m2"
                    android:textSize="18sp"
                    android:paddingTop="12dp"
                    android:inputType="number"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="12dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    android:hint="Giá triệu/tháng"
                    android:textSize="18sp"
                    android:paddingTop="12dp"
                    android:inputType="number"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="12dp" />
            </android.support.v7.widget.CardView>



            <ImageView
                android:id="@+id/imChoosePhoto"
                android:scaleType="centerCrop"
                android:src="@drawable/add_photo"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <android.support.v7.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnAddHouse"
                    style="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorBackground"
                    android:text="Đăng bài"
                    android:background="@drawable/background_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>